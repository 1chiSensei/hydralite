{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2019"],
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "declaration": false,
        "composite": false,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/resolvers/*": ["./src/resolvers/*"],
            "~/util/*": ["./src/util/*"],
            "~/auth/*": ["./src/auth/*"],
            "~/types/*": ["./src/types/*"],
            "~/config/*": ["./src/config/*"],
            "~/typegql-types/*": ["./src/typegql-generated/models/*"],
            "~/db/*": ["./src/db/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
