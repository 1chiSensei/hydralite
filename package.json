{
  "name": "hydralite",
  "version": "0.1.0",
  "workspaces": [
    "api",
    "web",
    "landing"
  ],
  "scripts": {
    "commit": "git add . && cz",
    "commit:signed": "cz -S",
    "setup": "yarn install && yarn workspace @hydralite/api run setup",
    "dev": "concurrently \"yarn workspace @hydralite/api run dev\" \"yarn workspace @hydralite/web run dev\""
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "3.3.0"
  },
  "dependencies": {
    "concurrently": "^6.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}